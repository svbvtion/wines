mixin contactUs()
	section.contacts#contacts
		.wrapper
			.contacts__body
				h2.title.section__title.contacts__title Свяжитесь <span class="title_decor">с нами</span>
				.contacts__content
					.contacts__text.contacts__item
						p.contacts__descr.section__descr Онлайн-магазин осуществляет бесплатную доставку по всей России с помощью собственной курьерской службы. Задать интересующий вопрос можно в любое время 
						.contacts__list.contact
							a.contact.js-modal-button(href="tel:+012-3254-6987")
								.contact__body
									+svgTrue('Call', 'contact__icon')
									span.contact__text +012-3254-6987
							a.contact.js-modal-button(href="mailto:Food&drink@gmail.com")
								.contact__body
									+svgTrue('Message', 'contact__icon')
									span.contact__text Food&amp;drink@gmail.com
							a.contact.js-modal-button(href="#")
								.contact__body
									+svgTrue('Location', 'contact__icon')
									span.contact__text Brahmanbaira, Dhaka, Bangladesh
						.contacts__links
							a.contacts__link.js-modal-button(href="#")
								span.hidden gmail link
								+webp('contacts__icon', 'google', 'png', 'google')
							a.contacts__link.js-modal-button(href="#")
								span.hidden twitter link
								+webp('contacts__icon', 'twitter', 'png', 'twitter')
							a.contacts__link.js-modal-button(href="#")
								span.hidden linked in link
								+webp('contacts__icon', 'linkedin', 'png', 'linked in')
							a.contacts__link.js-modal-button(href="#")
								span.hidden facebook link
								+webp('contacts__icon', 'facebook', 'png', 'facebook')


								 
					.contacts__form.contacts__item
						form.formUs
							.formUs__body
								.formUs__field
									input.formUs__input#formUs_name(type="text" required)
									label.formUs__label(for="formUs_name") Имя
								.formUs__field
									input.formUs__input#formUs_email(type="email" required)
									label.formUs__label(for="formUs_email") Email
								.formUs__field
									input.formUs__input#formUs_phone(type="tel" required)
									label.formUs__label(for="formUs_phone") Телефон
								.formUs__field.formUs__field_textarea
									textarea.formUs__input.formUs__textarea#formUs_message
									label.formUs__label(for="formUs_message") Сообщение
								.formUs__submit
									button.button.button_primary.formUs__button.js-modal-button(type="submit") Отправить
