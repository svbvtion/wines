mixin footer()
	.wrapper
		.footer__body
			.footer__links
				.footer__sections
					.footer-section
						.footer-section__header Компания
						.footer-section__body
							ul.footer-section__list
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") О нас
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Связаться
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Конфиденциальность
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Доставка &amp; оплата
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Поддержка
					.footer-section
						.footer-section__header Вопросы?
						.footer-section__body
							ul.footer-section__list
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Центр поддержки
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Отслеживание
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Возврат
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Доставка
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") История
					.footer-section
						.footer-section__header Полезные ссылки
						.footer-section__body
							ul.footer-section__list
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Подарочные карты
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Таблица размеров
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Мой аккаунт
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") Наше местоположение
								li.footer-section__item
									a.footer-section__link.link.js-modal-button(href="#") FAQS
					.footer-section
						.footer-section__header Связаться
						.footer-section__body
							ul.footer-section__list
								li.footer-section__list_contacts
									.contacts__links
										a.contacts__link.js-modal-button(href="#")
											span.hidden gmail link
											+webp('contacts__icon', 'google', 'png', 'google')
										a.contacts__link.js-modal-button(href="#")
											span.hidden twitter link
											+webp('contacts__icon', 'twitter', 'png', 'twitter')
										a.contacts__link.js-modal-button(href="#")
											span.hidden linked in link
											+webp('contacts__icon', 'linkedin', 'png', 'linked in')
										a.contacts__link.js-modal-button(href="#")
											span.hidden facebook link
											+webp('contacts__icon', 'facebook', 'png', 'facebook')
									
									.footer-contact__link
										a.contact.js-modal-button(href="tel:+012-3254-6987")
											.contact__body
												+svgTrue('Call', 'contact__icon')
												span.contact__text.link +012-3254-6987
										a.contact.js-modal-button(href="mailto:Food&drink@gmail.com")
											.contact__body
												+svgTrue('Message', 'contact__icon')
												span.contact__text.link Food&amp;drink@gmail.com
										a.contact.js-modal-button(href="#")
											.contact__body
												+svgTrue('Location', 'contact__icon')
												span.contact__text.link Brahmanbaira, Dhaka, Bangladesh
			.footer__bottom
				span.footer__copy &copy; Copyright 2020 wine&amp;food All Rights Reserved (Designhunterrbd) 

			